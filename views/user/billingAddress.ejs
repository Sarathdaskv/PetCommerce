<%- include('../layout/userHeader.ejs')%>
<div style="background: #eeeeee;">
    <div class="container-fluid pb-5" style="padding-top: 30px;">
        <div class="row px-xl-5">
            <div class="col-lg-7 mb-3" style="display: block;  overflow-x: auto;">
                <!-- For Billing Address -->
                <div class="col-lg-12 mb-4">
                    <h5 class="mb-3 text-uppercase" style="line-height: 1.2;">Add new Billing Address</h5>
                    <div class="p-4" style="width: 100%; background: #fff;">
                        <form action=""  method="post" style="text-align: left;" id="addressForm">
                            <div class="mb-3 d-flex">
                                 <div style="width: 50%;" class="me-1">
                                    <label for="" class="form-label">Building Name</label>
                                    <input type="text" class="form-control" name="building">
                                </div> 
                                <div style="width: 50%;" class="me-1">
                                    <label for="" class="form-label">Mobile No</label>
                                    <input type="number" class="form-control" name="mobileNumber" required>
                                </div>
                            </div>
                            <div class="mb-3 d-flex">
                                <div style="width: 50%;" class="ms-1">
                                    <label for="" class="form-label">Zip Code/Pin Code</label>
                                    <input type="text" class="form-control" name="pinCode" required>
                                </div>
                                <!-- <div style="width: 50%;" class="ms-1">
                                    <label for="" class="form-label">Locality</label>
                                    <input type="text" class="form-control" name="locality">
                                </div> -->
                            </div>
                            <div class="mb-3">
                                <div class="me-1">
                                    <label for="" class="form-label">Address</label>
                                    <textarea type="text" class="form-control" name="address" required
                                        style="height: 100px;"></textarea>
                                </div>
                            </div>
                            <div class="mb-3 d-flex">
                                <div style="width: 50%;" class="me-1">
                                    <label for="" class="form-label">City</label>
                                    <input type="text" class="form-control" name="city" required>
                                </div>
                                <div style="width: 50%;" class="ms-1">
                                    <label for="" class="form-label">State</label>
                                    <input type="text" class="form-control" name="state" required>
                                </div>
                            </div>
                            <div class="mb-3 d-flex">
                                <!-- <div style="width: 50%;" class="me-1">
                                    <label for="" class="form-label">Land Mark</label>
                                    <input type="text" class="form-control" name="land_Mark">
                                </div> -->
                                <div style="width: 50%;" class="me-1">
                                    <label for="" class="form-label">Alternative Phone *</label>
                                    <input type="text" class="form-control" name="alterMobile">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-warning">SAVE</button>
                        </form>
                    </div>
                </div>
                <!-- Bill Address add form end  -->
            </div>
        </div>
    </div>
</div>

