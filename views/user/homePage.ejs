<%- include('../layout/userHeader.ejs')%>
    <div style="background: #F5F5F5;">
        <!-- Offer Show -->
        <section class="offer">
            <div class="container-fluid mb-3 pt-4">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">

                    <div class="carousel-inner">
                        <%SliderImage.forEach((value,i)=>{%>
                            <%if(i==0){%>
                                <div class="carousel-item active">

                                    <img src="/img/banners/<%=value.image%>" class="d-block w-100" alt="...">
                                </div>
                                <%} else{%>
                                    <div class="carousel-item ">

                                        <img src="/img/banners/<%=value.image%>" class="d-block w-100" alt="...">
                                    </div>
                                    <%}%>
                                        <%})%>
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </section>
        <br>
        <!-- Services -->
        <section class="service pb-4">
            <div class="container-fluid mb-3 mt-3">
                <div class="row px-xl-5">
                    <div class="col-lg-3 col-md-6 col-sm-6 pb-1 mr-1rem mb-3">
                        <div class="card align-items-center">
                            <div>
                                <h1 class="las la-check"></h1>
                                <label for="">Quality Product</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 pb-1 mr-1rem mb-3">
                        <div class="card align-items-center">
                            <div>
                                <h1 class="las la-truck"></h1>
                                
                                <label for="">Free Shipping</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 pb-1 mr-1rem mb-3">
                        <div class="card align-items-center">
                            <div>
                                <h1 class="las la-exchange-alt"></h1>
                                <label for="">14-Day Return</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 pb-1 mr-1rem mb-3">
                        <div class="card align-items-center">
                            <div>
                                <h1 class="las la-phone-volume"></h1>
                                
                                <label for="">24/7 Support</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Categories -->
        <section class="category pb-4">
            <div class="container-fluid mb-3 mt-3">
                <div class="row px-xl-5">
                    <div class="title mb-4">
                        <h1>Categories</h1>
                    </div>
                    <% for (var i=0; i<category.length; i++) { %>
                        <div class="col-lg-3 col-md-4 col-sm-6 pb-1 mr-1rem mb-3">
                            <a href="/shop?id=<%= category[i]._id %>" style="text-decoration: none;">
                                <div class="card"
                                    style=" border-radius: 0; background-image: url('/img/categoryImage<%=i%>.jpg');background-size: cover;background-position: center; opacity: 0.9;">
                                    <div class="d-flex align-items-center">
                                        <div style="width: 100px; height:100px;">
                                        </div>
                                        <div>
                                            <input type="text"
                                                style="border:none;outline:0;font-weight: bolder;background-color: transparent;color: rgb(218, 32, 32);"
                                                value="<%=category[i].name.toUpperCase() %>">
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% } %>
                </div>
            </div>
        </section>


        <!-- Featured Products -->
        <section class="featured-products pb-4">
            <div class="container-fluid mb-3 mt-3">
                <div class="row px-xl-5">
                    <div class="title mb-4">
                        <h1>Featured Products</h1>
                    </div>
                    <% for (var i=0;i<featuredProducts.length && i<4 ;i++) { %>
                        <div class="col-lg-3 col-md-6 col-sm-12 pb-1 mr-1rem mb-3">
                            <div class="card align-items-center">
                                <div class="product-item">
                                    <img src="/img/products/<%=featuredProducts[i].thumbnail %>" alt="">
                                </div>
                                <div class="text-center py-4">
                                    <a href="/product/showDetail?id=<%=featuredProducts[i]._id %>">
                                        <p style="height: 50px; overflow:hidden;">
                                            <%=featuredProducts[i].name %>
                                        </p>
                                    </a>
                                    <div class="rate d-flex align-items-center justify-content-center mt-2">
                                        <h5>₹ <%=featuredProducts[i].discountPrice %>
                                        </h5>
                                        <!-- <h6 class="text-muted" style="text-decoration: line-through;">₹
                                            <%=featuredProducts[i].price %>
                                        </h6> -->
                                    </div>

                                    <div>
                                        <button class="btn pro-button"
                                            style="color: #3D464D; background-color: #FFD333; border-color: #FFD333;"
                                            onclick="addtoWhislist('<%= featuredProducts[i]._id %>')">
                                            <i class="fa-sharp fa-solid fa-heart"></i>
                                        </button>
                                        <button class="btn pro-button"
                                            style="color: #3D464D; background-color: #FFD333; border-color: #FFD333;"
                                            onclick="addToCart('<%= featuredProducts[i]._id %>','<%= featuredProducts[i].discountPrice %>')">
                                            <i class="fa-sharp fa-solid fa-cart-shopping"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <% } %>
                </div>
                <div class="viewmorebtn">
                    <a class="btn btn-warning ps-4 pe-4" href="/showProducts">More</a>
                </div>
            </div>
        </section>

